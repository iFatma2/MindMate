@model IEnumerable<ZhrCare.Models.Medication>

@{
    ViewData["Title"] = "Daily Schedule";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 style="color: #6c5ce7; font-weight: 700;">
            <i class="bi bi-calendar2-check"></i> Today's Schedule for @ViewBag.PatientName
        </h2>
        <p class="text-muted">@DateTime.Today.ToString("dddd, dd MMMM yyyy")</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (!Model.Any())
            {
                <div class="card shadow-sm border-0 p-5 text-center" style="border-radius: 15px;">
                    <div class="card-body">
                        <i class="bi bi-emoji-smile text-muted" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 text-secondary">No medications scheduled for today.</h5>
                    </div>
                </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    var isTaken = item.MedicationLogs.Any(l => l.TakenDate.Date == DateTime.Today);

                    <div class="card mb-3 shadow border-0" 
                         style="border-radius: 15px; transition: 0.3s; border-left: 6px solid @(isTaken ? "#2ecc71" : "#6c5ce7") !important;">
                        <div class="card-body d-flex justify-content-between align-items-center p-4">
                            <div>
                                <h5 class="fw-bold mb-1 @(isTaken ? "text-decoration-line-through text-muted" : "")" 
                                    style="color: #2d3436;">
                                    @item.Name
                                </h5>
                                <div class="small" style="color: #636e72;">
                                    <span class="me-3"><i class="bi bi-clock"></i> @item.ScheduledTime.ToString("hh:mm tt")</span>
                                    <span><i class="bi bi-capsule"></i> Dose: @item.Dosage</span>
                                </div>
                            </div>

                            <div>
                                @if (isTaken)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-4 py-2">
                                        <i class="bi bi-check2-all"></i> Taken
                                    </span>
                                }
                                else
                                {
                                    <form asp-action="MarkAsTaken" method="post">
                                        <input type="hidden" name="medicationId" value="@item.Id" />
                                        <input type="hidden" name="patientId" value="@ViewBag.PatientId" />
                                        <button type="submit" class="btn text-white px-4 shadow-sm fw-bold" 
                                                style="background-color: #6c5ce7; border-radius: 10px;">
                                            Mark as Taken
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            }

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-link text-decoration-none text-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Patient List
                </a>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">