<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #6c5ce7;">Patient List</h2>
        <a asp-action="Create" class="btn text-white" style="background-color: #6c5ce7; border-radius: 10px;">
            + Create New Patient
        </a>
    </div>

    <table class="table table-hover shadow-sm" style="border-radius: 15px; overflow: hidden;">
        <thead style="background-color: #6c5ce7; color: white;">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Created At</th>
            <th>Operations</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Name</td>
                <td>@item.Age</td>
                
                <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
